//Declare global variables
int x = 10; //declare an integer x, and assign it a value of 10
//int x = 11;
boolean isEqualTen = (x==10); //declare a boolean which returns TRUE when x equals to 10

if(isEqualTen){ //check if the boolean carries a value of TRUE
  println("Yes, x is ten"); // print "Yes, x is ten" in console when the boolean is TRUE
} else { //skip to this step if the boolean equals to FALSE
println("No, x is not ten");//print "No, x is not ten" in console when the boolean is TRUE
}